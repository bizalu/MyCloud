server {
    listen 80;
    server_name {{ ansible_nodename }} {{ ansible_default_ipv4.address }};

    location /.well-known/acme-challenge {
        root /etc/nginx/letsencrypt;
        try_files $uri $uri/ =404;
    }

    location / {
        rewrite ^ https://{{ domain_name }}$request_uri? permanent;
}